{{!-- Swiper --}}
<div class="ml-5 mr-5 mt-3">

    <h3>Nuevos productos</h3>
    <hr>
    <div class="swiper-container">
        <div class="swiper-wrapper">

            {{#if productos}}
            {{#each productos}}
            {{!-- col-md-3 col-sm-6 --}}
            <div class="cont-prod swiper-slide">
                <div class="product-grid7">
                    <div class="product-image7">
                        <a href="#">
                            <img class="pic-1" src="{{dataValues.imagen}}">
                            <img class="pic-2" src="{{dataValues.imagen2}}">
                        </a>
                        <ul class="social">
                            <li><a href="" class="fa fa-search"></a></li>
                            <li><a href="" class="fa fa-shopping-bag"></a></li>
                            <li><a href="" class="fa fa-shopping-cart"></a></li>
                        </ul>
                        <span class="product-new-label">{{dataValues.usuarioId}}</span>
                    </div>
                    <div class="product-content">
                        <h3 class="title"><a href="/producto/{{dataValues.url}}">{{dataValues.nombre}}</a></h3>
                        <ul class="rating">
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                        </ul>
                        <div class="price">Lps.{{dataValues.precio}}.00
                            {{!-- <span>$20.00</span> --}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="mx-auto">
                            <a class="btn " href="/producto/{{dataValues.url}}">Comprar</a>
                        </div>
                    </div>
                </div>

            </div>

            {{/each}}
            {{else}}
            <h4>Ha ocurrido un error</h4>
            {{/if}}


        </div>
        {{!-- Add Pagination --}}
        <div class="swiper-pagination"></div>
        {{!-- Add Arrows --}}
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
{{!-- Fin Swiper --}}