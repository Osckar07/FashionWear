  <div class="card-deck mb-3 text-center">
    {{!-- Mostrar los productos (si existen) --}}
    {{#if productos}}
        {{#each productos}}
        <div class="col-md-3 col-sm-6">
            <div class="product-grid6">
                <div class="product-image6">
                    <a href="#">
                        <img class="pic-1" src="{{dataValues.imagen}}">
                    </a>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="#">{{dataValues.nombre}}</a></h3>
                    <div class="price">L. {{dataValues.precio}}.00
                        {{!-- <span>$14.00</span> --}}
                    </div>
                </div>
                <ul class="social">
                    <li><a href="/producto/actualizar_producto/{{dataValues.url}}" data-tip="Editar"><i class="fas fa-edit"></i></a></li>
                    <li> <button name="eliminar-producto" data-producto-url={{dataValues.url}} type="button" data-tip="Eliminar"><i class="fas fa-trash-alt "></i></button></li>            
                </ul>
            </div>
        </div>

        {{/each}}
