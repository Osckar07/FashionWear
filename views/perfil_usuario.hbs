
{{#if user}}

<div class="perfilUsuario mt-3">
    <h2 class="mb-4">Mi Perfil</h2>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link " href="/perfil/usuario">Información Basica</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">Actualizar Información</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/perfil/usuario/cambiar_contrasena">Cambiar contraseña</a>
        </li>
    </ul>

    <div class="mostrarDatosGenerales mt-4">
        <form action="/perfil/usuario/actualizar_informacion" method="POST" enctype="multipart/form-data">
            <div class="form-group row">
                <img class="col-sm-2" src="{{us.imagen}}" alt="perfil">                
            </div>

            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">Cambiar foto de perfil</label>
                <div class="input-group col-sm-10">
                    <div class="custom-file">
                        <input name="image" type="file" class="custom-file-input" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01" style="cursor: pointer;">
                        <label class="custom-file-label" for="inputGroupFile01" id="archivo" style="cursor: pointer;">Seleccionar imagen...</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="nombre" name="nombre"
                        value="{{us.nombre}} {{us.apellido}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Correo electrónico</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="email" name="email"
                        value="{{user.email}}">
                </div>
            </div>

            <div class="form-group row">
                <label for="telefono" class="col-sm-2 col-form-label">Teléfono</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="telefono" maxlength="9" name="telefono"
                        placeholder="ejemplo. 9999-8888" required value="{{us.telefono}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="direccion" class="col-sm-2 col-form-label">Dirección</label>
                <div class="col-sm-8">
                    <textarea type="text" class="form-control" rows="3" id="direccion" name="direccion"
                        style="height: 100px;" required> {{us.direccion}} </textarea>
                </div>
            </div>
            <div class="row">
                <div class="mx-auto mt-3">
                    <button class="btn" type="submit">Confirmar cambios</button>
                    <button class="btn"><a style="color: white; text-decoration: none;" href="/perfil/usuario">
                            Cancelar</a></button>
                </div>
            </div>
        </form>
    </div>


</div>
{{/if}}