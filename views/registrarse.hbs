{{!--Formulario de registro--}}

{{#if error}}
    <p>{{error}}</p>
{{/if}}

    
    <div class="text-center mt-4">
        <h1>Registrarse</h1>
        <p>Compra de manera rápida y segura con nosotros</p>
        <p><hr></p>
    </div>

    <div class="formUser row">
        <div class="col-lg-5 m-5">
            <form class="form-signin" action="/registro" method="POST">

                {{!--Nombre Usuario--}}
                <div class="UserFullName row ml-1 ">
                    <div class="UserName mr-1">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" placeholder="Juan" required autofocus>
                </div>
                <div class="LastName">
                <label for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" placeholder="Martinez" required>
                </div>
                </div>
               
                {{!--Correo--}}
                <label for="correo">Correo electronico</label>
                <input type="email" name="email" id="email" placeholder="juanmartinez@gmail.com" required>
                <br>
                {{!--Contraseña--}}
                <label for="contraseña">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="*********" required>                
               
               <p class="text-center text-muted">Al crear una cuenta, aceptas nuestras <a href="#">Condiciones de  Uso</a> 
                                        y admites haber leído nuestro <a href="#">Aviso de Privacidad.</a></p>
                <p class="text-center text-muted">¿Ya tienes cuenta? <a href="/iniciar_sesion">Inicia sesión</a> </p>
                
                <button class="btn btn-lg btn-block  mt-4" type="submit">Registrarse</button>
            </form>
            

            </div>

            {{!--https://www.it-swarm.dev/es/html/como-hacer-una-linea-vertical-en-html/969310959/ hacer linea vertical--}}
         
            <div><div class=" vertical-line"></div></div>
                 

             <div class="FacebookGoogle col-lg-5">
            <div class="row UserLogo">
                <a href="/"><img src="img/Logo_Oficial.png" alt="logoFashionWear" class="img-ts rounded mx-auto d-block"></a>
            
            </div>
            <p class="text-center text-muted">O puedes registrarte usando: </p>
            <div class="BotonesCrearUsuario">
               <p>  <button class="btn btnfacebook facebook"><img src="img/facebook.png" style="width:18px; margin-bottom:4px; margin-right:4px;" alt="">  Facebook</button>

                <button class="btn btngoogle "><img src="img/google.png" style="width:18px; margin-bottom:4px; margin-right:4px;" alt=""> Google</button></p>
            </div>
            </div>

    </div>


</div>

</form>
