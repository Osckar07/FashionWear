<h1 class="mt-3 mb-4 text-center">Ingresar un nuevo producto al sistema</h1>

{{!-- Mostrar los mensajes en caso de existir --}}
{{>ourMessages}}

<form method="POST" action="/nuevo_producto" enctype="multipart/form-data">

  {{!--Primera fila--}}
  <div class="col-lg-12 mb-2">
    <div class="row">
      <div class="col-lg-6">

        <div class="form-group">
          <label for="nombre">Nombre del producto</label>
          <input type="text" class="form-control" id="nombre" name="nombre">
        </div>

      </div>
      <div class="col-lg-6">

        <label for="tipoProducto">Categoría</label>
        <div class="input-group mb-3">
          <select class="custom-select" id="inputGroupSelect01" name="categoria" required>
            <option value="">Seleccione...</option>
            {{#if categoria}}
            {{#each categoria}}
            <option value="{{dataValues.id}}">{{dataValues.nombre}}</option>
            {{/each}}
            {{/if}}
          </select>
        </div>

      </div>

    </div>

  </div>

  {{!--Fin de primera fila--}}

  <div class="col-lg-12 mb-2">

    <div class="form-group">
      <label for="nombre">Descripción</label>
      <textarea type="text" class="form-control" rows="3" id="descripcion" name="descripcion" style="height: 100px;"
        required> </textarea>
    </div>
  </div>

  {{!--Segunda fila--}}
  <div class="col-lg-12 mb-2">
    <div class="row">


      <div class="col-lg-6">

        <label for="tipoProducto">Tipo de Producto</label>
        <div class="input-group mb-3">
          <select class="custom-select" id="inputGroupSelect02" onchange="cargar_tallas()" name="tipoProducto" required>
            <option value="">Seleccione la categoría...</option>
            <option value="Camisa">Camisa</option>
            <option value="Pantalon">Pantalón</option>
            <option value="Zapatos">Zapatos</option>
            <option value="Accesorios">Accesorios</option>
          </select>
        </div>

      </div>

      <div class="col-lg-6">

        <label for="Talla">Talla</label>
        <div class="input-group mb-3">
          <select class="custom-select" id="inputGroupSelect03" name="talla" required>
            <option value="">Seleccione la talla...</option>
            {{!-- Aquí se mostrarán las tallas según el script de cargar tallas --}}
          </select>

        </div>
      </div>

    </div>
  </div>
  {{!--Fin de segunda fila--}}

  {{!--Tercer fila--}}
  <div class="col-lg-12 mb-2">
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="precio">Precio</label> <br>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">Lps.</span>
            </div>
            <input type="number" class="form-control" id="precio" name="precio" min="0" max="10000"
              aria-label="Amount (to the nearest dollar)">
            <div class="input-group-append">
              <span class="input-group-text">.00</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="cantidad">Cantidad</label> <br>
          <input type="number" min="1" step="1" max="100" value="1" class="form-control" id="cantidad" name="cantidad">
        </div>
      </div>

      <div class="col-lg-12">
        <label for="imagen">Elegir 2 imágenes</label> <br>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input name="image" type="file" class="custom-file-input" id="inputGroupFile01"
              aria-describedby="inputGroupFileAddon01" style="cursor: pointer;" multiple>
            <label class="custom-file-label" for="inputGroupFile01" id="archivo" style="cursor: pointer;" im>Seleccionar
              las imágenes...</label>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!--Fin de Tercer fila--}}

  <div class="row">
    <div class="mx-auto">
      <button type="submit" class="btn ">Agregar Producto</button>
    </div>
  </div>
</form>