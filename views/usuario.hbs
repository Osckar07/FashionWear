{{#if user}}

<div class="perfilUsuario mt-3">
    <h2 class="mb-4">Mi Perfil</h2>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#">Información Basica</a>
        </li>        
        <li class="nav-item">
            <a class="nav-link" href="/perfil/usuario/actualizar_informacion">Actualizar Información</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/perfil/usuario/cambiar_contrasena">Cambiar contraseña</a>
        </li>
        {{!-- <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li> --}}
    </ul>

    <div class="mostrarDatosGenerales mt-4">
        <form>
            <div class="form-group row">
                <img class="col-sm-2" src="{{us.imagen}}" alt="perfil">                
            </div>
            {{#if infoIncompleta}}
                <p style="color:rgb(199, 8, 8);">Agrega una imagen de perfil <i class="fas fa-exclamation-triangle"></i></p>
            {{/if}}
            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="nombre"
                        value="{{us.nombre}} {{us.apellido}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Correo Electronico</label>
                <div class="col-sm-10 mt-2">
                    <p>{{us.email}}</p>
                    {{!-- <input type="email" readonly class="form-control-plaintext" id="email" value="{{user.email}}"> --}}
                </div>
            </div>

    </div>
    <div class="form-group row">
        <label for="direccion" class="col-sm-2 col-form-label">Teléfono: </label>
        <div class="col-sm-8 mt-2">
            {{#if infoIncompleta}}
                <p style="color:rgb(199, 8, 8);" >Aún no has llenado esta información <i class="fas fa-exclamation-triangle"></i></p>
            {{else}}
                <p>{{us.telefono}}</p>  
            {{/if}}
        </div>
    </div>
    <div class="form-group row">
        <label for="direccion" class="col-sm-2 col-form-label">Direccion de entrega</label>
        <div class="col-sm-8 mt-2">
            {{#if infoIncompleta}}
                <p style="color:rgb(199, 8, 8);">Aún no has llenado esta información <i class="fas fa-exclamation-triangle"></i></p>
            {{else}}
                <p>{{us.direccion}}</p>                
            {{/if}}                
        </div>
    </div>
    <div class="form-group row mt-5">
        <button class="btn btn-primary mx-5"><a style="color: white; text-decoration: none;"
                href="/perfil/usuario/actualizar_informacion">Actualizar Información</a></button>
        <button class="btn btn-primary mx-5"><a style="color: white; text-decoration: none;"
                href="/perfil/usuario/cambiar_contrasena">Cambiar Contraseña</a></button>

    </div>
</div>

</div>

{{/if}}
