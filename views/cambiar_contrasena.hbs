<div class="perfilUsuario mt-3">
    <h2 class="mb-4">Mi Perfil</h2>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link " href="/perfil/usuario">Información Basica</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/perfil/usuario/actualizar_informacion">Actualizar información</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">Cambiar contraseña</a>
        </li>
    </ul>

    <div class="mostrarDatosGenerales mt-4">
        <form action="/perfil/usuario/cambiar_contrasena" method="POST">
            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">Usuario</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="nombre"
                        value="{{user.nombre}} {{user.apellido}}">
                </div>
            </div>

